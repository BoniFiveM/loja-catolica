<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Painel Administrativo - Loja Católica</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">

    <!-- Barra de navegação -->
    <nav class="bg-blue-600 text-white p-4 shadow-md">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-xl font-bold">Painel Administrativo</h1>
            <a href="/" class="text-white hover:underline">Voltar à Loja</a>
        </div>
    </nav>

    <!-- Formulário para adicionar produto -->
    <section class="py-12 bg-white shadow-md rounded-lg mx-4 sm:mx-10 md:mx-20">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold text-center text-blue-600 mb-8">Adicionar Novo Produto</h2>
            <form method="POST" action="/admin/produto/adicionar" class="space-y-6 max-w-2xl mx-auto">
                <div>
                    <label for="nome" class="block text-gray-700 font-medium mb-2">Nome do Produto</label>
                    <input type="text" id="nome" name="nome" placeholder="Nome do produto" required 
                           class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600">
                </div>
    
                <div>
                    <label for="descricao" class="block text-gray-700 font-medium mb-2">Descrição</label>
                    <textarea id="descricao" name="descricao" placeholder="Descrição do produto" required 
                              class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600 resize-none"></textarea>
                </div>
    
                <div>
                    <label for="preco" class="block text-gray-700 font-medium mb-2">Preço</label>
                    <input type="number" id="preco" step="0.01" name="preco" placeholder="Preço" required 
                           class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600">
                </div>
    
                <div>
                    <label for="categoria" class="block text-gray-700 font-medium mb-2">Categoria</label>
                    <input type="text" id="categoria" name="categoria" placeholder="Categoria" required 
                           class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600">
                </div>
    
                <div>
                    <label for="imagem" class="block text-gray-700 font-medium mb-2">URL da Imagem</label>
                    <input type="url" id="imagem" name="imagem" placeholder="URL da imagem" required 
                           class="w-full border border-gray-300 rounded-md px-4 py-2 focus:outline-none focus:ring-2 focus:ring-blue-600">
                </div>
    
                <button type="submit" class="w-full bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition">
                    Adicionar Produto
                </button>
            </form>
        </div>
    </section>
    

    <!-- Lista de Produtos Cadastrados -->
    <section class="py-12 bg-gray-50 mt-12">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold text-center text-blue-600 mb-8">Produtos Cadastrados</h2>
            <div class="overflow-x-auto">
                <table class="w-full bg-white border border-gray-300 rounded-lg shadow-md">
                    <thead>
                        <tr class="bg-blue-600 text-white">
                            <th class="px-4 py-2">Nome</th>
                            <th class="px-4 py-2">Preço</th>
                            <th class="px-4 py-2">Imagem</th>
                            <th class="px-4 py-2">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(produto => { %>
                            <tr class="border-b border-gray-200">
                                <td class="px-4 py-2 font-semibold">
                                    <%= produto.nome %>
                                </td>
                                <td class="px-4 py-2">
                                    R$ <%= parseFloat(produto.preco || 0).toFixed(2) %>
                                </td>
                                <td class="px-4 py-2">
                                    <img src="<%= produto.imagem %>" alt="<%= produto.nome %>"
                                        class="w-16 h-16 object-cover rounded-lg">
                                </td>
                                <td class="px-4 py-2">
                                    <a href="/admin/produto/editar/<%= produto.id %>" 
                                        class="text-blue-600 hover:text-blue-800 font-medium">Editar</a> |
                                    <a href="/admin/produto/deletar/<%= produto.id %>" 
                                        class="text-red-600 hover:text-red-800 font-medium">Deletar</a>
                                </td>
                            </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </section>

</body>

</html>
